<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.xSavior_of_God.fullscreenbrowser.FullscreenActivity">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp">

    <TextView
      android:id="@+id/heading"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Settings"
      android:textColor="#000"
      android:textSize="18sp" />

    <EditText
      android:id="@+id/inputUrl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/heading"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="20dp"
      android:drawable="@null"
      android:hint="..."
      android:inputType="textUri"
      android:textColor="#000" />

    <TextView
      android:id="@+id/txt1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/heading"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="34dp"
      android:drawable="@null"
      android:text="URL:"
      android:textColor="#000" />

    <TextView
      android:id="@+id/txt2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/heading"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="73dp"
      android:drawable="@null"
      android:text="REFRESH (sec.):"
      android:textColor="#000" />

    <EditText
      android:id="@+id/inputRefresh"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/heading"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="60dp"
      android:drawable="@null"
      android:hint="..."
      android:inputType="number"
      android:textColor="#000" />

    <Button
      android:id="@+id/action_ok"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="20dp"
      android:text="SAVE"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <Button
      android:id="@+id/action_cancel"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="20dp"
      android:text="CLOSE"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <Button
      android:id="@+id/button"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="100dp"
      android:layout_marginRight="100dp"
      android:onClick="closeApp"
      android:text="CLOSE THE APP"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <Button
      android:id="@+id/button_close"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="100dp"
      android:layout_marginRight="100dp"
      android:onClick="closeApp"
      android:text="CLOSE THE APP"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <Button
      android:id="@+id/button_toogle_reboot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginRight="80dp"
      android:textColor="@color/white"
      android:text="Toggle Reboot"
      android:textSize="8sp" />

    <TextView
      android:id="@+id/txt_toggle_reboot_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="19dp"
      android:layout_marginRight="20dp"
      android:text="Status: OFF"
      android:textSize="10sp" />

  </RelativeLayout>


</RelativeLayout>